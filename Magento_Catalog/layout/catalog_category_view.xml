<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <!-- move blocks -->
            <move element="category.image" destination="columns.top" before="-"/>
            <move element="page.main.title" destination="columns.top" after="category.image"/>
            <move element="category.cms" destination="columns.top" after="page.main.title"/>
            <move element="category.description" destination="columns.top" after="category.cms"/>
			
			<referenceBlock name="category.product.addto.compare" remove="true"/>
        
    </body>
</page>
