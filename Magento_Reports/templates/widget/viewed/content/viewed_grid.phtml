            require(['jquery'], function($){
                $(document).ready(function ($) {
                    $('.product-slider.<?php /* @escapeNotVerified */ echo $type; ?> > .owl-carousel').owlCarousel({
                        margin: 10,
                        loop: true,
                        nav: true,
                        navText: ['<i class="icon-left"/>','<i class="icon-right"/>'],
                        dots: false,
                        autoplay: true,
                        autoplayHoverPause: true,
                        responsive: {
                            0:{
                                items: 1
                            },
                            767:{
                                items: 3
                            },
                            1100:{
                                items: 4
                            }
                        }
                    });
                });
            });
        </script>
<?php endif;?>
